{
  "id": "phase_b_current_alert",
  "title": {
    "en": "Phase B current alert",
    "nl": "Fase B stroom alarm",
    "de": "Phase-B-Stromalarm",
    "fr": "Alerte de courant phase B"
  },
  "titleFormatted": {
    "en": "Phase B current [[condition]] [[current]] amperes",
    "nl": "Fase B stroom [[condition]] [[current]] ampère",
    "de": "Phase-B-Strom [[condition]] [[current]] Ampere",
    "fr": "Courant phase B [[condition]] [[current]] ampères"
  },
  "hint": {
    "en": "Triggers when Phase B current goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer Fase B stroom boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn der Phase-B-Strom einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque le courant de la phase B dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "current",
      "title": {
        "en": "Current (A)",
        "nl": "Stroom (A)"
      },
      "min": 0,
      "max": 50,
      "step": 1,
      "units": "A",
      "placeholder": {
        "en": "Current threshold in amperes",
        "nl": "Stroom drempel in ampère"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_current_b",
      "title": {
        "en": "Phase B current",
        "nl": "Fase B stroom",
        "de": "Phase-B-Strom",
        "fr": "Courant phase B"
      },
      "example": 15
    },
    {
      "type": "number",
      "name": "threshold_current",
      "title": {
        "en": "Threshold current",
        "nl": "Drempel stroom",
        "de": "Schwellenwert Strom",
        "fr": "Courant seuil"
      },
      "example": 20
    }
  ]
}