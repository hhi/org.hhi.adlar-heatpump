{
  "id": "monthly_cop_efficiency_changed",
  "title": {
    "en": "Monthly COP efficiency changed",
    "nl": "Maandelijkse COP efficiëntie gewijzigd",
    "de": "Monatliche COP-Effizienz geändert",
    "fr": "Efficacité COP mensuelle changée"
  },
  "titleFormatted": {
    "en": "Monthly COP efficiency [[condition]] [[threshold]]",
    "nl": "Maandelijkse COP efficiëntie [[condition]] [[threshold]]",
    "de": "Monatliche COP-Effizienz [[condition]] [[threshold]]",
    "fr": "Efficacité COP mensuelle [[condition]] [[threshold]]"
  },
  "hint": {
    "en": "Triggers when the 30-day average COP goes above or below a specified threshold",
    "nl": "Wordt geactiveerd wanneer de 30-dagen gemiddelde COP boven of onder een opgegeven drempel gaat",
    "de": "Wird ausgelöst, wenn die 30-Tage-Durchschnitts-COP einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque le COP moyen sur 30 jours dépasse ou descend en dessous d'un seuil spécifié"
  },
  "highlight": true,
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "threshold",
      "title": {
        "en": "Monthly COP threshold",
        "nl": "Maandelijkse COP drempel"
      },
      "min": 1,
      "max": 8,
      "step": 0.1,
      "units": "COP",
      "placeholder": {
        "en": "Monthly COP efficiency threshold",
        "nl": "Maandelijkse COP efficiëntie drempel"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_monthly_cop",
      "title": {
        "en": "Current monthly COP",
        "nl": "Huidige maandelijkse COP",
        "de": "Aktueller monatlicher COP",
        "fr": "COP mensuel actuel"
      },
      "example": 3.1
    },
    {
      "type": "number",
      "name": "threshold_cop",
      "title": {
        "en": "Threshold COP",
        "nl": "Drempel COP",
        "de": "Schwellenwert COP",
        "fr": "COP seuil"
      },
      "example": 3
    },
    {
      "type": "number",
      "name": "data_points",
      "title": {
        "en": "Data points used",
        "nl": "Gebruikte datapunten",
        "de": "Verwendete Datenpunkte",
        "fr": "Points de données utilisés"
      },
      "example": 1440
    },
    {
      "type": "string",
      "name": "confidence_level",
      "title": {
        "en": "Confidence level",
        "nl": "Betrouwbaarheidsniveau",
        "de": "Vertrauensniveau",
        "fr": "Niveau de confiance"
      },
      "example": "high"
    }
  ]
}
