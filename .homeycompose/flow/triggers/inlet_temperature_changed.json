{
  "id": "inlet_temperature_changed",
  "title": {
    "en": "Inlet temperature changed",
    "nl": "Water intrede temperatuur gewijzigd"
  },
  "titleFormatted": {
    "en": "Inlet temperature [[condition]] [[temperature]]°C",
    "nl": "Water intrede temperatuur [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when water inlet temperature goes above or below specified levels",
    "nl": "Wordt geactiveerd wanneer water intrede temperatuur boven of onder bepaalde niveaus gaat"
