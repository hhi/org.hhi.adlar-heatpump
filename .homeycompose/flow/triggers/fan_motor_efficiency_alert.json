{
  "id": "fan_motor_efficiency_alert",
  "title": {
    "en": "Fan motor efficiency alert",
    "nl": "Ventilator motor efficiëntie alarm",
    "de": "Lüftermotor-Effizienzalarm",
    "fr": "Alerte d'efficacité du moteur de ventilateur"
  },
  "titleFormatted": {
    "en": "Fan motor frequency [[condition]] [[frequency]] Hz",
    "nl": "Ventilator motor frequentie [[condition]] [[frequency]] Hz",
    "de": "Lüftermotor-Frequenz [[condition]] [[frequency]] Hz",
    "fr": "Fréquence du moteur de ventilateur [[condition]] [[frequency]] Hz"
  },
  "hint": {
    "en": "Triggers when fan motor frequency goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer ventilator motor frequentie boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn die Lüftermotor-Frequenz einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque la fréquence du moteur de ventilateur dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "frequency",
      "title": {
        "en": "Frequency (Hz)",
        "nl": "Frequentie (Hz)"
      },
      "min": 10,
      "max": 100,
      "step": 5,
      "units": "Hz",
      "placeholder": {
        "en": "Frequency threshold in Hz",
        "nl": "Frequentie drempel in Hz"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_fan_frequency",
      "title": {
        "en": "Current fan frequency",
        "nl": "Huidige ventilator frequentie",
        "de": "Aktuelle Lüfterfrequenz",
        "fr": "Fréquence actuelle du ventilateur"
      },
      "example": 75
    },
    {
      "type": "number",
      "name": "threshold_frequency",
      "title": {
        "en": "Threshold frequency",
        "nl": "Drempel frequentie",
        "de": "Schwellenwert Frequenz",
        "fr": "Fréquence seuil"
      },
      "example": 80
    }
  ]
}