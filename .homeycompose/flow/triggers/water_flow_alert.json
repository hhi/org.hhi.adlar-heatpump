{
  "id": "water_flow_alert",
  "title": {
    "en": "Water flow rate alert",
    "nl": "Water doorstroom alarm",
    "de": "Wasserdurchfluss-Alarm",
    "fr": "Alerte de débit d'eau"
  },
  "titleFormatted": {
    "en": "Water flow rate [[condition]] [[flow_rate]] L/min",
    "nl": "Water doorstroom [[condition]] [[flow_rate]] L/min",
    "de": "Wasserdurchfluss [[condition]] [[flow_rate]] L/min",
    "fr": "Débit d'eau [[condition]] [[flow_rate]] L/min"
  },
  "hint": {
    "en": "Triggers when water flow rate goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer water doorstroom boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn der Wasserdurchfluss einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque le débit d'eau dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "flow_rate",
      "title": {
        "en": "Flow rate (L/min)",
        "nl": "Doorstroom (L/min)"
      },
      "min": 0,
      "max": 100,
      "step": 5,
      "units": "L/min",
      "placeholder": {
        "en": "Flow rate threshold in L/min",
        "nl": "Doorstroom drempel in L/min"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_flow_rate",
      "title": {
        "en": "Current flow rate",
        "nl": "Huidige doorstroom",
        "de": "Aktueller Durchfluss",
        "fr": "Débit actuel"
      },
      "example": 25
    },
    {
      "type": "number",
      "name": "threshold_flow_rate",
      "title": {
        "en": "Threshold flow rate",
        "nl": "Drempel doorstroom",
        "de": "Schwellenwert Durchfluss",
        "fr": "Débit seuil"
      },
      "example": 20
    }
  ]
}
