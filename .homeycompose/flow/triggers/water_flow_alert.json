{
  "id": "water_flow_alert",
  "title": {
    "en": "Water flow rate alert (Expert)",
    "nl": "Water doorstroom alarm (Expert)",
    "de": "Wasserdurchfluss-Alarm (Experte)",
    "fr": "Alerte de débit d'eau (Expert)"
  },
  "titleFormatted": {
    "en": "Water flow rate [[condition]] [[flow_rate]] L/min (Expert)",
    "nl": "Water doorstroom [[condition]] [[flow_rate]] L/min (Expert)",
    "de": "Wasserdurchfluss [[condition]] [[flow_rate]] L/min (Experte)",
    "fr": "Débit d'eau [[condition]] [[flow_rate]] L/min (Expert)"
  },
  "hint": {
    "en": "Triggers when water flow rate goes above or below a specified level. Requires 'Enable expert feature cards' in device settings.",
    "nl": "Wordt geactiveerd wanneer water doorstroom boven of onder een bepaald niveau gaat. Vereist 'Expert functie kaarten inschakelen' in apparaat instellingen.",
    "de": "Wird ausgelöst, wenn der Wasserdurchfluss einen angegebenen Schwellenwert über- oder unterschreitet. Erfordert 'Expertenfunktionskarten aktivieren' in den Geräteeinstellungen.",
    "fr": "Se déclenche lorsque le débit d'eau dépasse ou descend en dessous d'un niveau spécifié. Nécessite 'Activer les cartes de fonctionnalités d'expert' dans les paramètres de l'appareil."
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie",
        "de": "Bedingung",
        "fr": "Condition"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven",
            "de": "über",
            "fr": "au-dessus"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder",
            "de": "unter",
            "fr": "en dessous"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "flow_rate",
      "title": {
        "en": " Flow rate (L/min)",
        "nl": " Doorstroom (L/min)",
        "de": " Durchflussrate (L/min)",
        "fr": " Débit (L/min)"
      },
      "min": 0,
      "max": 100,
      "step": 5,
      "units": "L/min",
      "placeholder": {
        "en": "Flow rate threshold in L/min",
        "nl": "Doorstroom drempel in L/min",
        "de": "Durchflussschwellenwert in L/min",
        "fr": "Seuil de débit en L/min"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_flow_rate",
      "title": {
        "en": "Current flow rate",
        "nl": "Huidige doorstroom",
        "de": "Aktueller Durchfluss",
        "fr": "Débit actuel"
      },
      "example": 25
    },
    {
      "type": "number",
      "name": "threshold_flow_rate",
      "title": {
        "en": "Threshold flow rate",
        "nl": "Drempel doorstroom",
        "de": "Schwellenwert Durchfluss",
        "fr": "Débit seuil"
      },
      "example": 20
    }
  ]
}
