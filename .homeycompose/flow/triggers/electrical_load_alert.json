{
  "id": "electrical_load_alert",
  "title": {
    "en": "Electrical load alert",
    "nl": "Elektrische belasting alarm",
    "de": "Elektrische Lastalarm",
    "fr": "Alerte de charge électrique"
  },
  "titleFormatted": {
    "en": "Current load [[condition]] [[current]] amperes",
    "nl": "Stroomsterkte [[condition]] [[current]] ampère",
    "de": "Stromstärke [[condition]] [[current]] Ampere",
    "fr": "Charge de courant [[condition]] [[current]] ampères"
  },
  "hint": {
    "en": "Triggers when electrical current goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer elektrische stroom boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn der elektrische Strom einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque le courant électrique dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "current",
      "title": {
        "en": "Current (A)",
        "nl": "Stroom (A)"
      },
      "min": 1,
      "max": 50,
      "step": 1,
      "units": "A",
      "placeholder": {
        "en": "Current threshold in amperes",
        "nl": "Stroom drempel in ampère"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_amperage",
      "title": {
        "en": "Current amperage",
        "nl": "Huidige stroomsterkte",
        "de": "Aktuelle Stromstärke",
        "fr": "Intensité actuelle"
      },
      "example": 12.5
    },
    {
      "type": "number",
      "name": "threshold_amperage",
      "title": {
        "en": "Threshold amperage",
        "nl": "Drempel stroomsterkte",
        "de": "Schwellenwert Stromstärke",
        "fr": "Intensité seuil"
      },
      "example": 15
    }
  ]
}