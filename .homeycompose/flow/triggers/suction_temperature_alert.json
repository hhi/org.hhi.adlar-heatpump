{
  "id": "suction_temperature_alert",
  "title": {
    "en": "Suction temperature alert",
    "nl": "Zuiggas temperatuur alarm"
  },
  "titleFormatted": {
    "en": "Suction temperature [[condition]] [[temperature]]°C",
    "nl": "Zuiggas temperatuur [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when suction temperature goes above or below specified levels",
    "nl": "Wordt geactiveerd wanneer zuiggas temperatuur boven of onder bepaalde niveaus gaat"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": "Temperature (°C)",
        "nl": "Temperatuur (°C)"
      },
      "min": -30,
      "max": 50,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current Suction temperature",
        "nl": "Huidige Zuiggas temperatuur"
      },
      "example": 5.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur"
      },
      "example": 10
    }
  ]
}