{
  "id": "suction_temperature_alert",
  "title": {
    "en": "Suction temperature alert",
    "nl": "Zuiggas temperatuur alarm",
    "de": "Sauggas-Temperaturalarm",
    "fr": "Alerte de température d'aspiration"
  },
  "titleFormatted": {
    "en": "Suction temperature [[condition]] [[temperature]]°C",
    "nl": "Zuiggas temperatuur [[condition]] [[temperature]]°C",
    "de": "Sauggas-Temperatur [[condition]] [[temperature]]°C",
    "fr": "Température d'aspiration [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when suction temperature goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer zuiggas temperatuur boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn die Sauggas-Temperatur einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque la température d'aspiration dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie",
        "de": "Bedingung",
        "fr": "Condition"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven",
            "de": "über",
            "fr": "au-dessus"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder",
            "de": "unter",
            "fr": "en dessous"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": " Temperature ",
        "nl": " Temperatuur ",
        "de": " Temperatur ",
        "fr": " Température "
      },
      "min": -30,
      "max": 50,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C",
        "de": "Temperaturschwellenwert in °C",
        "fr": "Seuil de température en °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current Suction temperature",
        "nl": "Huidige Zuiggas temperatuur",
        "de": "Aktuelle Sauggas-Temperatur",
        "fr": "Température d'aspiration actuelle"
      },
      "example": 5.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur",
        "de": "Schwellenwert Temperatur",
        "fr": "Température seuil"
      },
      "example": 10
    }
  ]
}
