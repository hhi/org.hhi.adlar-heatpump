{
  "id": "phase_c_current_alert",
  "title": {
    "en": "Phase C current alert",
    "nl": "Fase C stroom alarm"
  },
  "titleFormatted": {
    "en": "Phase C current [[condition]] [[current]] amperes",
    "nl": "Fase C stroom [[condition]] [[current]] ampère"
  },
  "hint": {
    "en": "Triggers when Phase C current goes above or below specified levels",
    "nl": "Wordt geactiveerd wanneer Fase C stroom boven of onder bepaalde niveaus gaat"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "current",
      "title": {
        "en": "Current (A)",
        "nl": "Stroom (A)"
      },
      "min": 0,
      "max": 50,
      "step": 1,
      "units": "A",
      "placeholder": {
        "en": "Current threshold in amperes",
        "nl": "Stroom drempel in ampère"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_current_c",
      "title": {
        "en": "Phase C current",
        "nl": "Fase C stroom"
      },
      "example": 15
    },
    {
      "type": "number",
      "name": "threshold_current",
      "title": {
        "en": "Threshold current",
        "nl": "Drempel stroom"
      },
      "example": 20
    }
  ]
}