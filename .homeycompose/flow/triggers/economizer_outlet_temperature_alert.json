{
  "id": "economizer_outlet_temperature_alert",
  "title": {
    "en": "Economizer outlet temperature alert",
    "nl": "EVI warmtewisselaar persgas temperatuur alarm"
  },
  "titleFormatted": {
    "en": "Economizer outlet temperature [[condition]] [[temperature]]°C",
    "nl": "EVI warmtewisselaar persgas temperatuur [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when economizer outlet temperature goes above or below specified levels",
    "nl": "Wordt geactiveerd wanneer EVI warmtewisselaar persgas temperatuur boven of onder bepaalde niveaus gaat"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": "Temperature (°C)",
        "nl": "Temperatuur (°C)"
      },
      "min": -30,
      "max": 80,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current Economizer outlet temperature",
        "nl": "Huidige EVI warmtewisselaar persgas temperatuur"
      },
      "example": 35.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur"
      },
      "example": 40
    }
  ]
}