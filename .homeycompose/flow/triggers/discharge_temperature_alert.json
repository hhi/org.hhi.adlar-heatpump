{
  "id": "discharge_temperature_alert",
  "title": {
    "en": "Discharge temperature alert",
    "nl": "Persgas temperatuur alarm"
  },
  "titleFormatted": {
    "en": "Discharge temperature [[condition]] [[temperature]]°C",
    "nl": "Persgas temperatuur [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when discharge temperature goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer persgas temperatuur boven of onder een bepaald nivo gaat"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": "Temperature (°C)",
        "nl": "Temperatuur (°C)"
      },
      "min": 0,
      "max": 120,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current Discharge temperature",
        "nl": "Huidige Persgas temperatuur"
      },
      "example": 75.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur"
      },
      "example": 80
    }
  ]
}