{
  "id": "high_pressure_temperature_alert",
  "title": {
    "en": "High pressure temperature alert",
    "nl": "Hogedruk verzadigingstemperatuur alarm",
    "de": "Hochdruck-Temperaturalarm",
    "fr": "Alerte de température haute pression"
  },
  "titleFormatted": {
    "en": "High pressure temperature [[condition]] [[temperature]]°C",
    "nl": "Hogedruk verzadigingstemperatuur [[condition]] [[temperature]]°C",
    "de": "Hochdruck-Temperatur [[condition]] [[temperature]]°C",
    "fr": "Température haute pression [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when high pressure saturation temperature goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer hogedruk verzadigingstemperatuur boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn die Hochdruck-Sättigungstemperatur einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque la température de saturation haute pression dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie",
        "de": "Bedingung",
        "fr": "Condition"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven",
            "de": "über",
            "fr": "au-dessus"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder",
            "de": "unter",
            "fr": "en dessous"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": " Temperature ",
        "nl": " Temperatuur ",
        "de": " Temperatur ",
        "fr": " Température "
      },
      "min": -20,
      "max": 100,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C",
        "de": "Temperaturschwellenwert in °C",
        "fr": "Seuil de température en °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current High pressure temperature",
        "nl": "Huidige Hogedruk verzadigingstemperatuur",
        "de": "Aktuelle Hochdruck-Temperatur",
        "fr": "Température haute pression actuelle"
      },
      "example": 65.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur",
        "de": "Schwellenwert Temperatur",
        "fr": "Température seuil"
      },
      "example": 70
    }
  ]
}
