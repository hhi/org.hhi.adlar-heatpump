{
  "id": "economizer_inlet_temperature_alert",
  "title": {
    "en": "Economizer inlet temperature alert",
    "nl": "EVI warmtewisselaar zuiggas temperatuur alarm",
    "de": "Economizer-Einlass-Temperaturalarm",
    "fr": "Alerte de température d'entrée de l'économiseur"
  },
  "titleFormatted": {
    "en": "Economizer inlet temperature [[condition]] [[temperature]]°C",
    "nl": "EVI warmtewisselaar zuiggas temperatuur [[condition]] [[temperature]]°C",
    "de": "Economizer-Einlass-Temperatur [[condition]] [[temperature]]°C",
    "fr": "Température d'entrée de l'économiseur [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when economizer inlet temperature goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer EVI warmtewisselaar zuiggas temperatuur boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn die Economizer-Einlass-Temperatur einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque la température d'entrée de l'économiseur dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": "Temperature (°C)",
        "nl": "Temperatuur (°C)"
      },
      "min": -30,
      "max": 80,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current Economizer inlet temperature",
        "nl": "Huidige EVI warmtewisselaar zuiggas temperatuur",
        "de": "Aktuelle Economizer-Einlass-Temperatur",
        "fr": "Température d'entrée actuelle de l'économiseur"
      },
      "example": 25.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur",
        "de": "Schwellenwert Temperatur",
        "fr": "Température seuil"
      },
      "example": 30
    }
  ]
}