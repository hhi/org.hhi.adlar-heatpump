{
  "id": "evi_pressure_alert",
  "title": {
    "en": "EVI Open pressure alert",
    "nl": "EVI-openingsstop druk alarm"
  },
  "titleFormatted": {
    "en": "EVI Open pressure [[condition]] [[pressure]]",
    "nl": "EVI-openingsstop druk [[condition]] [[pressure]]"
  },
  "hint": {
    "en": "Triggers when Enhanced Vapor Injection (EVI) pressure goes above or below specified levels",
    "nl": "Wordt geactiveerd wanneer Enhanced Vapor Injection (EVI) druk boven of onder bepaalde niveaus gaat"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "pressure",
      "title": {
        "en": "Pressure",
        "nl": "Druk"
      },
      "min": -500,
      "max": 500,
      "step": 10,
      "units": "Pa",
      "placeholder": {
        "en": "Pressure threshold",
        "nl": "Druk drempel"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_pressure",
      "title": {
        "en": "Current EVI Open pressure",
        "nl": "Huidige EVI-openingsstop druk"
      },
      "example": 250
    },
    {
      "type": "number",
      "name": "threshold_pressure",
      "title": {
        "en": "Threshold pressure",
        "nl": "Drempel druk"
      },
      "example": 200
    }
  ]
}