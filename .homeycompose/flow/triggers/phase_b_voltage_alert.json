{
  "id": "phase_b_voltage_alert",
  "title": {
    "en": "Phase B voltage alert",
    "nl": "Fase B spanning alarm",
    "de": "Phase-B-Spannungsalarm",
    "fr": "Alerte de tension phase B"
  },
  "titleFormatted": {
    "en": "Phase B voltage [[condition]] [[voltage]] volts",
    "nl": "Fase B spanning [[condition]] [[voltage]] volt",
    "de": "Phase-B-Spannung [[condition]] [[voltage]] Volt",
    "fr": "Tension phase B [[condition]] [[voltage]] volts"
  },
  "hint": {
    "en": "Triggers when Phase B voltage goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer Fase B spanning boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn die Phase-B-Spannung einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque la tension de la phase B dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump&capabilities=measure_voltage.bv"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie",
        "de": "Bedingung",
        "fr": "Condition"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven",
            "de": "über",
            "fr": "au-dessus"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder",
            "de": "unter",
            "fr": "en dessous"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "voltage",
      "title": {
        "en": " Voltage (V)",
        "nl": " Spanning (V)",
        "de": " Spannung (V)",
        "fr": " Tension (V)"
      },
      "min": 180,
      "max": 260,
      "step": 5,
      "units": "V",
      "placeholder": {
        "en": "Voltage threshold in volts",
        "nl": "Spanning drempel in volt",
        "de": "Spannungsschwellenwert in Volt",
        "fr": "Seuil de tension en volts"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_voltage_b",
      "title": {
        "en": "Phase B voltage",
        "nl": "Fase B spanning",
        "de": "Phase-B-Spannung",
        "fr": "Tension phase B"
      },
      "example": 230
    },
    {
      "type": "number",
      "name": "threshold_voltage",
      "title": {
        "en": "Threshold voltage",
        "nl": "Drempel spanning",
        "de": "Schwellenwert Spannung",
        "fr": "Tension seuil"
      },
      "example": 220
    }
  ]
}
