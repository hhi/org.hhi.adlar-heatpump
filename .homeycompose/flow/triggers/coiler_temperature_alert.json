{
  "id": "coiler_temperature_alert",
  "title": {
    "en": "Coiler temperature alert",
    "nl": "Verdampingscondensator temperatuur alarm",
    "de": "Verdampfer-Temperaturalarm",
    "fr": "Alerte de température du serpentin"
  },
  "titleFormatted": {
    "en": "Coiler temperature [[condition]] [[temperature]]°C",
    "nl": "Verdampingscondensator temperatuur [[condition]] [[temperature]]°C",
    "de": "Verdampfer-Temperatur [[condition]] [[temperature]]°C",
    "fr": "Température du serpentin [[condition]] [[temperature]]°C"
  },
  "hint": {
    "en": "Triggers when electricity coiler temperature goes above or below a specified level",
    "nl": "Wordt geactiveerd wanneer verdampingscondensator temperatuur boven of onder een bepaald nivo gaat",
    "de": "Wird ausgelöst, wenn die Verdampfer-Temperatur einen angegebenen Schwellenwert über- oder unterschreitet",
    "fr": "Se déclenche lorsque la température du serpentin dépasse ou descend en dessous d'un niveau spécifié"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=intelligent-heat-pump"
    },
    {
      "type": "dropdown",
      "name": "condition",
      "title": {
        "en": "Condition",
        "nl": "Conditie"
      },
      "values": [
        {
          "id": "above",
          "title": {
            "en": "above",
            "nl": "boven"
          }
        },
        {
          "id": "below",
          "title": {
            "en": "below",
            "nl": "onder"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "temperature",
      "title": {
        "en": "Temperature (°C)",
        "nl": "Temperatuur (°C)"
      },
      "min": -20,
      "max": 80,
      "step": 1,
      "units": "°C",
      "placeholder": {
        "en": "Temperature threshold in °C",
        "nl": "Temperatuur drempel in °C"
      }
    }
  ],
  "tokens": [
    {
      "type": "number",
      "name": "current_temperature",
      "title": {
        "en": "Current Coiler temperature",
        "nl": "Huidige Verdampingscondensator temperatuur",
        "de": "Aktuelle Verdampfer-Temperatur",
        "fr": "Température actuelle du serpentin"
      },
      "example": 45.5
    },
    {
      "type": "number",
      "name": "threshold_temperature",
      "title": {
        "en": "Threshold temperature",
        "nl": "Drempel temperatuur",
        "de": "Schwellenwert Temperatur",
        "fr": "Température seuil"
      },
      "example": 50
    }
  ]
}